{
  "name": "node-test",
  "type": "module",
  "scripts": {
    "test": "node --test",
    "test-parser": "node --test | tap-parser",
    "test-report": "node --test | tap-spec",
    "test-mocha": "mocha test/**.test.js --reporter=spec",
    "cov": "c8 -r html npm test",
    "cov-mocha": "c8 -r html npm run test-mocha"
  },
  "devDependencies": {
    "@tap-format/spec": "^0.2.0",
    "c8": "^7.12.0",
    "mocha": "^10.0.0",
    "supertape": "^8.1.0",
    "tap": "^16.3.0",
    "tap-mocha-reporter": "^5.0.3",
    "tap-parser": "^11.0.1",
    "tap-spec": "^5.0.0",
    "treport": "^3.0.4"
  }
}
